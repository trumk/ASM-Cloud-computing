<html lang="en">
  <head>
    <link rel="stylesheet" href="/stylesheets/admin.css" />
  </head>
  <body>
    <div class="sidebar">
      <img
        src="./images/spiderman.jpg"
        width="120"
        height="120"
        alt="Swiss Collection"
      />
      <h5 style="margin-top:10px;">Hello, Admin</h5>
      <a class="sidebar-link" href="/toy/lego/">Manage Lego</a>
      <a class="sidebar-link" href="/toy/car/">Manage Car</a>
      <!-- Add more links for other features if needed -->
    </div>
   <div class="content">
    <h1>Admin Dashboard</h1>
    <div class="container"> <!-- Add container for cars -->
      {{#each car}}
        <div class="card">
          <img src="{{ image }}" />
          <h3>{{ modelName }}</h3>
          <p>${{ price }}</p>
          <p>Quantity: {{ quantity }}</p>
        </div>
      {{/each}}

      {{#each lego}}
        <div class="card">
          <img src="{{ image }}" />
          <h3>{{ modelName }}</h3>
          <p>{{ price }}</p>
          <p>Description: Lorem ipsum dolor sit amet...</p>
        </div>
      {{/each}}
    </div>
  </div>
  </body>

</html>