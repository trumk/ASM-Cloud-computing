<html lang="en">
  <head>
    <link rel="stylesheet" href="/stylesheets/admin.css" />
    <style>
      .container { display: flex; flex-wrap: wrap; justify-content: center; gap:
      20px; padding: 20px; } .card { width: 250px; border: 1px solid #ccc;
      border-radius: 5px; padding: 15px; box-shadow: 0px 2px 4px rgba(0, 0, 0,
      0.1); } .card img { max-width: 100%; height: auto; } .card h3 { margin:
      10px 0; } .card p { color: #555; }
    </style>
  </head>
  <body>
    <div class="sidebar">
      <img
        src="./images/spiderman.jpg"
        width="120"
        height="120"
        alt="Swiss Collection"
      />
      <h5 style="margin-top:10px;">Hello, Admin</h5>
      <a class="sidebar-link" href="/toy/lego/">Manage Lego</a>
      <a class="sidebar-link" href="/toy/car/">Manage Car</a>
      <!-- Add more links for other features if needed -->
    </div>
    <div class="content">
      <h1>Admin Dashboard</h1>
      <div class="card">
        {{#each car}}
          <img src="{{ image }}"/>
          <h3>Product 1</h3>
          <p>Price: $19.99</p>
          <p>Description: Lorem ipsum dolor sit amet...</p>
        {{/each}}
      </div>
    </div>
  </body>

</html>