<div class="container mt-3 mb-3">
  <h1>Lego List</h1>
  <a href="/lego/add" class="btn btn-success">Add</a>
  <a
    onclick="return confirm('Are you sure you want to delete all')"
    href="/toy/lego//deleteall"
    class="btn btn-danger"
  >Delete all</a>
  <table border="1">
    <tr>
      <th colspan="7">Lego List</th>
    </tr>
    <tr>
      <th>Image</th>
      <th>Brand Name</th>
      <th>Model Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Menu</th>
    </tr>
    {{#each lego}}
      <tr>
        <th><img src="{{ image }}" width="100" height="150"></th>
        <th>{{brandName}}</th>
        <th>{{modelName}}</th>
        <th>{{description}}</th>
        <th>${{price}}</th>
        <th>{{ quantity }}</th>
        <th>
            <a href="/toy/lego/edit/{{ _id }}" class="btn btn-warning">Edit</a> 
            <a href="/toy/lego//delete/{{ _id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
        </th>
      </tr>
    {{/each}}

  </table>
</div>